@using App_UI.Resource.ViewText.Common
@using App_UI.Resource.ViewText.Purchase
@using Model

<link rel="stylesheet" href="~/Content/css/Admin/userInfo.css" />
<script type="text/javascript" src="~/Scripts/purchase/PurchaseOrder.js"></script>

<div class="FunctionButton_Area" style="width:100%;text-align:right;">
    @UserHelpers.ButtonForSanction("approve()")
    @UserHelpers.ButtonForExamine("review()")
    @UserHelpers.ButtonForSave("saveEdit()")
    @UserHelpers.ButtonForPrintPreview("printPreviewEdit()")
    @UserHelpers.ButtonForClose("parent.closeTab(gTitle)")  
</div>

<!--分割线-->
@UserHelpers.Line()

<div style="text-align:center;font-size:20px;">
    <!-- 页面标题 -->
    @UserHelpers.Title(@VT_PurchaseOrderList.EditTitle)
</div><br />

<!-- 隐藏项 -->
    <input type="hidden" id="data" value="@ViewBag.OutOrderID" />
    <input type="hidden" id="RemarksHidden"/>
    <input type="hidden" id="FaxHidden" />

<!-- 搜索块 -->
<div style="width: 100%; text-align: center; margin-bottom: 15px;">
    <div style="width: 95%; margin: auto; text-align: left;">
        <form id="searchForm" method="post" class="Search_Form">
            <table style="padding-left:150px;">
                <tr>
                    <td style="height:40px;">@VT_PurchaseOrderList.OutOrderID：<label>@ViewBag.OutOrderID</label></td>
                    <td style="width:150px;"></td>
                    <td>@VT_PurchaseOrderList.UrgentStatus：
                        @if (ViewBag.UrgentStatus == VT_PurchaseOrderList.UrgentStatus2)
                        {
                            <label style="color:red">@ViewBag.UrgentStatus</label>
                        }
                        else if (ViewBag.UrgentStatus == VT_PurchaseOrderList.UrgentStatus1)
                        { 
                            <label style="color:yellow">@ViewBag.UrgentStatus</label>
                        }
                        else
                        {
                            <label>@ViewBag.UrgentStatus</label>
                        }
                    </td>
                    <td>@VT_PurchaseOrderList.OutOrderStatus:
                        <label>@ViewBag.OutOrderStatus</label>
                    </td>
                </tr>
                <tr>
                    <td style="height:40px;">@VT_PurchaseOrderList.DeptName：<label id="DeptName">@ViewBag.DeptName</label></td>
                    <td></td>
                    <td>@VT_PurchaseOrderList.CName：<label id="CompName">@ViewBag.CompName</label></td>
                    <td></td>
                </tr>
                <tr>
                    <td style="height:40px;">@VT_PurchaseOrderList.EstDate：
                        @if (ViewBag.EstablishDate != "")
                        { 
                             <label id="EstablishDate">@ViewBag.EstablishDate</label>
                        }
                        else
                        {
                            <label>@ViewBag.NowTime</label>
                        }
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>

<div class="datagrid" style="text-align:center;width:100%;">
    <table id="purchaseOrderTable" ></table>   
</div>

<div>
    <table style="width:900px;height:auto;margin:auto">
        <tr style="height:40px;">
            <td style="width:75px;">@VT_PurchaseOrderList.ApproveUID</td>
            <td style="width:150px;">
                @if (ViewBag.ApproveUID != "" && ViewBag.ApproveUID!=null)
                { 
                    <label>@ViewBag.ApproveUID</label>
                }
                else
                {
                @*<input id="ApproveUID" name="ApproveUID" class="easyui-validatebox" />*@
                    <input type='text' name='ApproveUID' id='ApproveUID' disabled='disabled' size='13'/><img src='/Scripts/js/themes/icons/search_icon.png' onclick=''/>
                }
            </td>
            <td style="width:75px;">@VT_PurchaseOrderList.VerifyUID</td>
            <td style="width:150px;">
                @if (ViewBag.VerifyUID != "" && ViewBag.VerifyUID!=null)
                { 
                    <label>@ViewBag.VerifyUID</label>
                }
                else
                {
                @*<input id="VerifyUID2" name="VerifyUID" class="easyui-validatebox"/>*@
                    <input type='text' name='VerifyUID' id='VerifyUID' disabled='disabled' size='13'/><img src='/Scripts/js/themes/icons/search_icon.png' onclick=''/>
                }
            </td>
            <td style="width:75px;">@VT_PurchaseOrderList.EstUID</td>
            <td style="width:150px;">
                @if (ViewBag.EstablishUID != "" && ViewBag.EstablishUID!=null)
                { 
                    <label>@ViewBag.EstablishUID</label>
                }
                else
                {
                @*<input id="EstablishUID2" name="EstablishUID" class="easyui-validatebox"/>*@
                    <input type='text' name='EstablishUID' id='EstablishUID' disabled='disabled' size='13'/><img src='/Scripts/js/themes/icons/search_icon.png' onclick=''/>
                }
            </td>
            <td style="width:75px;">@VT_PurchaseOrderList.SignUID</td>
            <td style="width:150px;">
                @if (ViewBag.SignUID != "" && ViewBag.SignUID!=null)
                { 
                    <label>@ViewBag.SignUID</label>
                }
                else
                {
                @*<input id="SignUID2" name="SignUID" class="easyui-validatebox"  />*@
                    <input type='text' name='SignUID' id='SignUID' disabled='disabled' size='13'/><img src='/Scripts/js/themes/icons/search_icon.png' onclick=''/>
                }
            </td>
        </tr>
        <tr>
            <td colspan="6" style="text-align:left">@VT_PurchaseOrderList.Remarks<input type="text" id="Remarks2" name="Remarks2" style="width:550px;" class="easyui-validatebox" value="@ViewBag.Remarks" /></td>
            <td>@VT_PurchaseOrderList.FaxNo</td><td><input id="FaxNo" name="FaxNo" value="@ViewBag.FaxNo" class="easyui-validatebox" /></td>
        </tr>
    </table>    
</div>

