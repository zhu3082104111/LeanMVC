@using App_UI.Resource.ViewText.Purchase
<script src="~/Scripts/purchase/SupplierAccoutingDetail.js" type="text/javascript"></script>

<div class="buttons" style="width:96%;text-align:right;">
    @UserHelpers.ButtonForClose("parent.closeTab(gTitle)")
</div>
@UserHelpers.Line()
<br />
<div style="text-align:center;font-size:20px;">
    @UserHelpers.Title(@VT_SupplierAccoutingDetail.Title)
</div><br/>
<div class="div_main">
    <div id="toolbar" class="div_search">
        <table style="margin:auto;text-align:left;">
            <tr>
                <td class="title">@VT_SupplierAccoutingDetail.SupplierOrderNo</td>
                <td>@ViewBag.SupOrderNo<input id="hdnSupOrderNo" type="hidden" value="@ViewBag.SupOrderNo" /></td>
                <td style="padding-left: 20px">@VT_SupplierAccoutingDetail.UrgentStatus</td>
                <td>@ViewBag.UrgentStatus</td>
                <td style="padding-left: 20px">@VT_SupplierAccoutingDetail.OrderDate</td>
                <td>@ViewBag.MarkDate</td>
                <td style="padding-left: 20px">@VT_SupplierAccoutingDetail.Department</td>
                <td>@ViewBag.Department</td>
            </tr>
            <tr>
                <td class="title">@VT_SupplierAccoutingDetail.Company</td>
                <td colspan="7">@ViewBag.InCompName</td>
            </tr>
        </table>
    </div>
    <div class="datagrid" style="text-align:center;width:100%;">
        <table id="purchaseAccoutingDetailsTable" ></table>
    </div>
</div>


