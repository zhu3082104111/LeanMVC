@using App_UI.Resource.ViewText.Purchase
<script src="~/Scripts/purchase/PurchaseAccountingDetail.js" type="text/javascript"></script>

<div class="FunctionButton_Area" style="width:96%;text-align:right;">
    @UserHelpers.ButtonForClose("parent.closeTab(gTitle)")
</div>
<!--分割线-->
@UserHelpers.Line()
<div style="text-align:center;font-size:20px;">
    @UserHelpers.Title(@VT_PurchaseAccountingDetail.Title)
</div><br/>
<div class="div_main">
    <div id="toolbar" class="div_search">
        <table style="margin:auto;text-align:left;">
            <tr>
                <td>@VT_PurchaseAccountingDetail.OutSourceNo</td>
                <td>@ViewBag.OutOrderNo<input id="hdnOutOrderNo" type="hidden" value="@ViewBag.OutOrderNo" /></td>
                <td style="padding-left: 20px">@VT_PurchaseAccountingDetail.UrgentStatus</td>
                <td>@ViewBag.UrgentStatus</td>
                <td style="padding-left: 20px">@VT_PurchaseAccountingDetail.OrderDate</td>
                <td>@ViewBag.EstablishDate</td>
                <td style="padding-left: 20px">@VT_PurchaseAccountingDetail.Department</td>
                <td>@ViewBag.DeptName</td>
            </tr>
            <tr>
                <td>@VT_PurchaseAccountingDetail.Company</td>
                <td colspan="7">@ViewBag.CompName</td>
            </tr>
        </table>
    </div>
    <div class="datagrid" style="text-align:center;width:100%;">
        <table id="purchaseAccoutingDetailsTable" ></table>
    </div>
</div>