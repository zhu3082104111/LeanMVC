@{
    ViewBag.Title = "FinOutPrintIndex";
}
@using App_UI.Resource.ViewText.Store
<style>
#tablesearch {
        margin:auto;
       
        text-align:left;
    }
#tablesearch td
    {
        width:350px;
    }
#tableshow {
        margin:auto;
       
        text-align:left;
    }
#tableshow td
    {
        width:300px;
    }
</style>

<!--上面的页面导航-->
<div class="buttons" style="width:100%;text-align:right;">
    <!--  打印 -->
    @UserHelpers.ButtonForPrint("printFun()")
    <!--  关闭 -->
    @UserHelpers.ButtonForClose("parent.closeTab(gTitle)")
    <span style="width:100px;margin-right:10%">&nbsp;</span>
</div>
<!--分割线-->
@UserHelpers.Line()
<!--界面-->
<div style="width:100%;text-align:left;">
        <span>@VT_FinOutRecord.FinOutPrintIndexTitle</span>
</div>
<div style="width:100%;text-align:center;margin-bottom:12px;">
        <span id="mainTitle">@VT_FinOutRecord.LDKFinOutPrintIndexTitle</span>
</div>

<div style="width:100%;text-align:center;">
    <div style="width:89%;margin:auto;text-align:left;">
        <form id="searchForm" method='post'>
            <table id="tablesearch">
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td style="text-align: right;width:400px;">@VT_FinOutRecord.FinInerFinOutID：</td>
                <td><Label FOR="inerFinOutID" style="width:60px;">@ViewBag.inerFinOutID</Label></td>
            </tr>
        
            <tr>
                <td>@VT_FinOutRecord.DeliverySection：</td>
                <td></td>
                <td>@VT_FinOutRecord.ReceiptSection：</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
      </table>
    </form>
   </div>
</div>

<div class="datagrid">
    <table id="finOutPrintIndexTable"></table> 
</div>

    <div style="width:89%;margin:auto;text-align:left;">
       
            <table id="tableshow">
            <tr>
                <td style="text-align: left">@VT_FinOutRecord.DeliveryMan：</td>
                <td></td>
                <td style="text-align: left">@VT_FinOutRecord.ReceiptMan：</td>
                <td></td>
            </tr>
            <tr>
                <td style="text-align: left">@VT_FinOutRecord.DeliveryDate：</td>
                <td></td>
                <td style="text-align: left">@VT_FinOutRecord.ReceiptDate：</td>
                <td></td>
            </tr>
    </table>
</div>

@section head{
<link rel="stylesheet" href="~/Content/css/Store/EndProOutRecord.css" /> 
   
<style>
    #mainTitle {
        font-size: 20pt;
    }
</style>


<script>

    var table;  //显示数据的表的标志
    var form;  //搜索标志
  
    /***********operations start***************/

    //打印功能
    var printFun = function () {
        alert("打印成功！");
    };

    //列属性:["field","title",width,rowspan,colspan,sortable,editor,formatter(v,r,index){}]
    var columns = [
        [//第一行
                     ["ClientOrderID", "订单号", null, 2, null, true],
                     ["OrdPdtID", "物料编号", 100, 2, null, true],
                     ["ProductName", "物料名称", 100, 2, null, true],
                     ["Quantity", "数量", 80, 2, null, true, "text"],
                     [null/*此处不要写字段名，null或空字符即可，否则会出错*/, "包装情况", null, null, 3, true],
                     ["GetQuantity", "实收数量", 80, 2, null, true],
                     ["Remarks", "备注", 200, 2, null, true]
        ], [//第二行
                     ["PackPrePieceQuantity", "每件数量", 100, null, null, true, "text"], ["PackPieceQuantity", "件数", 100, null, null, true, "text"], ["FracQuantity", "零头", 100, null, null, true, "text"]
        ]

    ];
    /***********operations end***************/

    $(function () {
        table = $("#finOutPrintIndexTable");
        form = $("#searchForm");
        Common.Functions.createDataGrid({//创建datagrid,详细内容参见functions.js
            target: "#finOutPrintIndexTable",//table容器,必须
            url: "/Store/FinOutRecord/ShowOutPrintIndex?inerFinOutID=@ViewBag.inerFinOutID&clientId=@ViewBag.clientId&OPdtId=@ViewBag.OPdtId&batchId=@ViewBag.batchId",//获取数据的地址
            columns: columns,//列属性,必须
            maxWidth: 1000,//最大宽度
            maxHeight: 600,//最大高度
            onDblClickRow: function (rowIndex, rowData) {
                return false;
            },
            onClickRow: function (rowIndex, rowData) {
                return false;
            },
            onLoadError: function () {
                alert("请求服务器失败，请刷新页面重试!");
            },
            onCreating: function (data) {//数据成功加载
                //do something...
                return ;
            }

        });
      
    });


</script>
}

